<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyBaseKotlin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_light_1</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/color_light_2</item>
        <item name="colorSecondary">@color/color_light_3</item>
        <item name="colorSecondaryVariant">@color/color_light_4</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@color/blue</item>
        <item name="secondaryButtonColor">@color/color_light_3</item>
    </style>


    <!-- Base Dark Theme -->
    <style name="Theme.MyBaseKotlin.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_dark_1</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/color_dark_2</item>
        <item name="colorSecondary">@color/color_dark_3</item>
        <item name="colorSecondaryVariant">@color/color_dark_3</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@color/blue</item>
        <item name="secondaryButtonColor">@color/color_dark_3</item>
    </style>


    <!-- Collapsed App Bar Text Style -->
    <style name="collapsed_app_bar" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp22</item>
        <item name="android:textColor">#000000</item>
    </style>



    <!-- Custom Date Picker Dialog Style -->
    <style name="customDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/buttonBarPositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/buttonBarNegativeButtonStyle</item>
    </style>

    <!-- Positive Button Style -->
    <style name="buttonBarPositiveButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- Negative Button Style -->
    <style name="buttonBarNegativeButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- Custom User Edit Dialog Style -->
    <style name="CustomUserEditDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
