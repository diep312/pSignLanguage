<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_action_bar"
            android:layout_width="411dp"
            android:layout_height="86dp"
            android:background="@color/white"
            android:padding="@dimen/dp8"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tv_brief"
                android:layout_width="256dp"
                android:layout_height="44dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/str_profile"
                android:textAlignment="center"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/sp34"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/sv_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/color_bg"
            app:layout_constraintBottom_toTopOf="@id/btn_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_action_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp12">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvName"
                    android:layout_width="366dp"
                    android:layout_height="81dp"
                    android:layout_marginTop="28dp"
                    app:cardBackgroundColor="@color/color_secondary"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:contentPadding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_brief">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_showName"
                            android:layout_width="271dp"
                            android:layout_height="39dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text=""
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imv_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:paddingVertical="@dimen/dp8"
                            android:src="@drawable/ic_logout"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.461"
                            app:tint="@color/black" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvInfo"
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/color_secondary"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:contentPadding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cvName">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="319dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/bg_edt_v2"
                            android:hint="@string/str_enter_name"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/sp13"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.615"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="24dp"
                            android:text="@string/str_full_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/str_date_of_birth"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/edt_name" />

                        <TextView
                            android:id="@+id/edt_birthday"
                            android:layout_width="319dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:background="@drawable/bg_edt_v2"
                            android:hint="@string/str_choose_date_of_birth"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/sp13"
                            app:drawableEndCompat="@drawable/ic_pick_date"
                            app:flow_verticalAlign="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_birthday" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/str_address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/edt_birthday" />

                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="319dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/bg_edt_v2"
                            android:hint="@string/str_enter_address"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/sp13"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.615"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_address" />

                        <TextView
                            android:id="@+id/tv_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/str_language"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/edt_address" />

                        <RadioGroup
                            android:id="@+id/rg_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/tv_language">

                            <RadioButton
                                android:id="@+id/rb_vn"
                                android:layout_width="319dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="@string/str_vietnamese"
                                android:textSize="@dimen/sp13" />

                            <RadioButton
                                android:id="@+id/rb_en"
                                android:layout_width="319dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/str_english"
                                android:textSize="@dimen/sp13" />
                        </RadioGroup>

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="319dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/bg_edt_v2"
                            android:hint="@string/str_enter_email"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/sp13"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_email" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="4dp"
                            android:text="@string/str_email"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rg_language" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/str_phone_number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/edt_email" />

                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="319dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bg_edt_v2"
                            android:hint="@string/str_enter_phone"
                            android:inputType="phone"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/sp13"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_phone" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAdditionalInfo"
                    android:layout_width="378dp"
                    android:layout_height="307dp"
                    android:layout_marginTop="44dp"
                    app:cardBackgroundColor="@color/color_secondary"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:contentPadding="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.515"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cvInfo">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_account_information"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp20"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_profile_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp16"
                            android:text="@string/str_profile_number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_info" />

                        <EditText
                            android:id="@+id/edt_profile_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:background="@drawable/bg_edt_v2"
                            android:hint="@string/str_enter_profile_number"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/sp13"
                            app:layout_constraintTop_toBottomOf="@id/tv_profile_num" />

                        <TextView
                            android:id="@+id/tv_support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp16"
                            android:text="@string/str_support_by"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/edt_profile_num" />

                        <EditText
                            android:id="@+id/edt_support"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:background="@drawable/bg_edt_v2"
                            android:hint="@string/str_support_by"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/sp13"
                            app:layout_constraintTop_toBottomOf="@id/tv_support" />

                        <TextView
                            android:id="@+id/tv_register_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp16"
                            android:text="@string/str_register_by"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/edt_support" />

                        <EditText
                            android:id="@+id/edt_register_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:background="@drawable/bg_edt_v2"
                            android:hint="@string/str_register_by"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/sp13"
                            app:layout_constraintTop_toBottomOf="@id/tv_register_num" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp12"
            android:background="@drawable/bg_btn"
            android:backgroundTint="@color/color_primary"
            android:fontFamily="@font/montserrat_bold"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="@dimen/dp12"
            android:paddingVertical="@dimen/dp8"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/str_save_changes"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_main" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>