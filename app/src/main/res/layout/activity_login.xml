<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imv_login"
            android:src="@drawable/ic_login"
            android:scaleType="center"
            android:padding="@dimen/dp14"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:background="@drawable/bg_act_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/imv_login"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingTop="@dimen/dp16"
                android:paddingHorizontal="@dimen/dp16"
                android:paddingBottom="@dimen/dp48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_label_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:layout_marginTop="@dimen/dp6"
                    android:textColor="@color/text_color"
                    android:text="@string/str_phone_number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:textSize="@dimen/sp14"
                    android:drawablePadding="@dimen/dp14"
                    android:drawableStart="@drawable/ic_phone"
                    android:textColor="@color/color_edt"
                    android:paddingHorizontal="@dimen/dp14"
                    android:paddingVertical="@dimen/dp14"
                    android:layout_marginTop="@dimen/dp4"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_phone"
                    android:background="@drawable/bg_edt" />

                <TextView
                    android:id="@+id/tv_label_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/text_color"
                    android:text="@string/str_pass"
                    android:layout_marginTop="@dimen/dp16"
                    app:layout_constraintTop_toBottomOf="@id/edt_phone"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <EditText
                    android:id="@+id/edt_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_key"
                    android:drawablePadding="@dimen/dp14"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_edt"
                    android:paddingStart="@dimen/dp14"
                    android:paddingEnd="@dimen/dp48"
                    android:paddingVertical="@dimen/dp14"
                    android:layout_marginTop="@dimen/dp4"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_pass"
                    android:background="@drawable/bg_edt" />

                <ImageView
                    android:id="@+id/imv_show_hide_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/edt_pass"
                    app:layout_constraintBottom_toBottomOf="@id/edt_pass"
                    app:layout_constraintRight_toRightOf="@id/edt_pass"
                    android:padding="@dimen/dp14"
                    android:src="@drawable/ic_eye_closed" />

                <TextView
                    android:id="@+id/tv_forgot_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/edt_pass"
                    android:text="@string/str_forgot_pass"
                    android:paddingVertical="@dimen/dp8"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="@dimen/sp14" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_login"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_forgot_pass"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp20"
                    android:paddingVertical="@dimen/dp8"
                    android:textSize="@dimen/sp16"
                    android:background="@drawable/bg_btn" />

               <TextView
                   android:id="@+id/tv_register"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@id/btn_login"
                   android:text="@string/str_require_register"
                   android:textSize="@dimen/sp14"
                   android:paddingVertical="@dimen/dp14"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent" />

                <com.google.android.material.internal.BaselineLayout
                    android:id="@+id/line1"
                    android:background="@color/text_color"
                    android:layout_width="0dp"
                    app:layout_constraintTop_toTopOf="@id/tv_or"
                    app:layout_constraintBottom_toBottomOf="@id/tv_or"
                    android:layout_height="@dimen/dp1"
                    app:layout_constraintRight_toLeftOf="@id/tv_or"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_or"
                    android:paddingHorizontal="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp12"
                    android:textColor="@color/text_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_register"
                    app:layout_constraintLeft_toRightOf="@+id/line1"
                    app:layout_constraintRight_toLeftOf="@id/line2"/>

                <com.google.android.material.internal.BaselineLayout
                    android:id="@+id/line2"
                    android:background="@color/text_color"
                    android:layout_width="0dp"
                    app:layout_constraintTop_toTopOf="@id/tv_or"
                    app:layout_constraintBottom_toBottomOf="@id/tv_or"
                    android:layout_height="@dimen/dp1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_or"/>

                <ImageView
                    android:id="@+id/imv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_or"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/imv_google"
                    android:layout_marginTop="@dimen/dp20"
                    android:src="@drawable/ic_facebook"/>

                <ImageView
                    android:id="@+id/imv_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_or"
                    app:layout_constraintLeft_toRightOf="@id/imv_facebook"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/dp20"
                    android:src="@drawable/ic_google"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>