<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_8"
        android:backgroundTint="@color/color_secondary"
        android:padding="@dimen/dp8">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imv_label"
            android:layout_width="@dimen/dp65"
            android:layout_height="@dimen/dp65"
            android:scaleType="centerCrop"
            android:src="@drawable/im_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp8" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp13"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_label"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_learn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_radius_30"
            android:backgroundTint="@color/color_primary"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text=">"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dp18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>