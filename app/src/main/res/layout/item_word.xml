<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="151dp"
        android:layout_height="182dp"
        android:layout_marginHorizontal="@dimen/dp12"
        android:background="@drawable/bg_radius_8"
        android:backgroundTint="@color/color_secondary"
        android:padding="@dimen/dp8">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imv_label"
            android:layout_width="@dimen/dp128"
            android:layout_height="@dimen/dp128"
            android:layout_marginStart="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/im_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.029"
            app:riv_corner_radius="@dimen/dp8" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="89dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="@dimen/dp8"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imv_label"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_learn"
            android:layout_width="33dp"
            android:layout_height="26dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/bg_radius_8"
            android:backgroundTint="@color/colorYellow"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="@dimen/dp14"
            android:paddingVertical="@dimen/dp8"
            android:text=">"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>