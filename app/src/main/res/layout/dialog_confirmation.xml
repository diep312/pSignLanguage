<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_radius_20"
    android:backgroundTint="@color/color_camera"
    android:paddingHorizontal="@dimen/dp30"
    android:paddingVertical="@dimen/dp35">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp20"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <VideoView
                android:id="@+id/vw_preview_vid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:scaleType="fitCenter"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        android:weightSum="3"
        android:padding="@dimen/dp20">
        <ImageView
            android:id="@+id/btn_discard"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:background="@drawable/bg_radius_30"
            android:backgroundTint="#7f7f7f"
            android:src="@drawable/ic_close"
            app:tint="@color/white"
            android:padding="@dimen/dp10"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <ImageView
            android:id="@+id/btn_check"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:background="@drawable/bg_radius_30"
            android:backgroundTint="@color/primary"
            android:src="@drawable/ic_check"
            app:tint="@color/white"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>