        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/bg_radius_30_top"
            android:backgroundTint="@color/color_primary"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="12dp"
                android:layout_gravity="center|top"
                android:paddingTop="5dp"
                android:scaleType="centerCrop"
                android:src="@color/white" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp16"
                    android:paddingBottom="13dp"
                    android:text="Scored"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/btn_check"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.7" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn"
                    android:backgroundTint="@color/color_highlight"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="@dimen/dp12"
                    android:paddingVertical="@dimen/dp8"
                    android:text="@string/str_check"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintBottom_toTopOf="@+id/vv_record"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_score" />

                <VideoView
                    android:id="@+id/vv_record"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/dp10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.678" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/im_vidview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_radius_8"
                    android:backgroundTint="@color/color_highlight"
                    android:elevation="@dimen/dp10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.99"
                    android:paddingHorizontal="14dp">

                        <TextView
                            android:id="@+id/tv_novideo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/str_novid"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp16"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="10dp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/im_question"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_novideo"
                            app:layout_constraintVertical_bias="0.95"
                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>