<!--                tools:ignore="ContentDescription" />-->

            <TextView
                android:id="@+id/imv_record"
                android:layout_width="match_parent"
                android:layout_height="46sp"
                android:background="@drawable/bg_radius_30"
                android:backgroundTint="@color/color_primary"
                android:padding="@dimen/dp12"
                android:text="@string/str_use_camera"
                android:layout_marginHorizontal="@dimen/dp18"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_video_guile"
                app:tint="@color/color_gray" />
            <TextView
                android:id="@+id/imv_pick"
                android:layout_width="match_parent"
                android:layout_height="46sp"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_radius_30"
                android:backgroundTint="@color/color_primary"
                android:fontFamily="@font/montserrat_regular"
                android:padding="@dimen/dp12"
                android:text="@string/str_go_to_folder"
                android:layout_marginHorizontal="@dimen/dp18"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imv_record"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/imv_check"
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp24"
                android:src="@drawable/ic_check_true"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/layout_video_guile"
                app:layout_constraintEnd_toStartOf="@+id/layout_video_guile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

